{# templates/credential/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes identifiants{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .credential-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 12px;
        overflow: hidden;
    }
    
    .credential-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .site-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background: linear-gradient(135deg, #4f46e5, #818cf8);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.2rem;
    }
    
    .card-actions {
        opacity: 0.6;
        transition: opacity 0.2s;
    }
    
    .credential-card:hover .card-actions {
        opacity: 1;
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Mes identifiants</h1>
        <a href="{{ path('credential_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Ajouter un identifiant
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if credentials is empty %}
        <div class="text-center p-5 bg-light rounded-3 shadow-sm">
            <div class="py-4">
                <i class="fas fa-key fa-3x text-muted mb-3"></i>
                <h3>Aucun identifiant enregistré</h3>
                <p class="text-muted">Commencez par ajouter vos identifiants pour les retrouver facilement!</p>
                <a href="{{ path('credential_new') }}" class="btn btn-primary mt-3">
                    Ajouter mon premier identifiant
                </a>
            </div>
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for credential in credentials %}
                <div class="col">
                    <div class="card h-100 credential-card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="site-icon me-3">{{ credential.name|first|upper }}</div>
                                <div>
                                    <h5 class="card-title mb-0">{{ credential.name }}</h5>
                                    <p class="text-muted small mb-0">{{ credential.domain }}</p>
                                </div>
                            </div>
                            <p class="mb-0 text-truncate">
                                <span class="text-muted me-2">Identifiant:</span>
                                {{ credential.username }}
                            </p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-end gap-2 card-actions">
                            <a href="{{ path('credential_show', {'id': credential.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{{ path('credential_edit', {'id': credential.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <form method="post" action="{{ path('credential_delete', {'id': credential.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet identifiant ?');" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ credential.id) }}">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}